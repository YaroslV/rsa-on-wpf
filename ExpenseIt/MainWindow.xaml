<Window x:Class="ExpenseIt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox Name="InputText" HorizontalAlignment="Left" Height="88" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="416"/>
        <TextBox x:Name="OutputText" HorizontalAlignment="Left" Height="82" Margin="10,103,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="416" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.104"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="DecryptedText" HorizontalAlignment="Left" Height="99" Margin="10,193,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="416"/>
        <Button  Content="Encrypt" HorizontalAlignment="Left" Margin="444,44,0,0" VerticalAlignment="Top" Width="63" RenderTransformOrigin="-0.16,0.682" Click="Button_Click"/>
        <Button Content="Decrypt" HorizontalAlignment="Left" Margin="444,138,0,0" VerticalAlignment="Top" Width="63" Click="Button_Click_1"/>

    </Grid>
</Window>
